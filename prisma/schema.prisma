generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Patient {
  id           Int           @id @default(autoincrement())
  name         String
  email        String?       @unique
  phone        String?
  createdAt    DateTime      @default(now())
  appointments Appointment[]
}

model StartTime {
  id        Int      @id @default(autoincrement())
  time      String   @unique
  createdAt DateTime @default(now())

  Day   Day? @relation(fields: [dayId], references: [id])
  dayId Int?

  @@index([dayId])
}

model EndTime {
  id        Int      @id @default(autoincrement())
  time      String   @unique
  createdAt DateTime @default(now())

  Day   Day? @relation(fields: [dayId], references: [id])
  dayId Int?

  @@index([dayId])
}

model Day {
  id           Int           @id @default(autoincrement())
  weekday         String        @unique(sort: Asc)
  createdAt    DateTime      @default(now())
  startTimes   StartTime[]
  endTimes     EndTime[]
  appointments Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  patientId Int?
  dayId     Int?
  busy      Boolean
  createdAt DateTime @default(now())
  patient   Patient? @relation(fields: [patientId], references: [id])
  day       Day?     @relation(fields: [dayId], references: [id])

  @@index([patientId])
  @@index([dayId])
}
